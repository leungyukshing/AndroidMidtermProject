<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:padding="20dp"
    android:alpha="0.8">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/equipImg"
        android:src="@drawable/arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equipname"
        android:text="装备名"
        android:textColor="@color/green"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/equipImg"
        app:layout_constraintTop_toTopOf="@id/equipImg"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sellPrice"
        android:text="售价：400"
        android:layout_marginTop="10dp"
        android:textColor="@color/brown"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/equipname"
        app:layout_constraintLeft_toRightOf="@id/equipImg"
        android:layout_marginLeft="15dp">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyPrice"
        android:text="总价：500"
        app:layout_constraintTop_toBottomOf="@id/sellPrice"
        android:layout_marginTop="10dp"
        android:textColor="@color/brown"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@id/equipImg"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equipdetail"
        android:textColor="@color/skyblue"
        android:text="装备属性"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/buyPrice"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uniquepassive"
        android:text="唯一被动"
        android:textSize="18dp"
        android:textColor="@color/skyblue"
        app:layout_constraintTop_toBottomOf="@id/equipdetail"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="30dp"/>
</android.support.constraint.ConstraintLayout>